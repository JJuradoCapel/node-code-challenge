{
  "name": "node-code-challenge",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "package": "tsc && pkg .",
    "test": "mocha -r ts-node/register test/*/**.test.ts",
    "lint": "eslint ."
  },
  "bin": "dist/src/index.js",
  "pkg": {
    "targets": ["node14-win-x64", "node14-linux-x64", "node14-macos-x64"],
    "scripts": "dist/**/*.js",
    "outputPath": "compiled/"
  },
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.4.2",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "chai": "^4.3.4",
    "eslint": "^7.31.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.23.4",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.1",
    "mocha": "^9.0.3",
    "pkg": "^5.3.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "app/**/*.{js,jsx,ts,tsx}": [
      "eslint"
    ]
  },
  "dependencies": {
    "@types/minimist": "^1.2.2",
    "minimist": "^1.2.5"
  }
}
